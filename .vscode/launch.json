{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch PHP Built-in Server",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/router.php",
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            },
            "runtimeArgs": [
                "-S",
                "localhost:8080",
                "-t",
                "${workspaceFolder}",
                "router.php"
            ],
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_CONFIG": "client_port=9003"
            }
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "${workspaceFolder}": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Current PHP File",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${filePath}",
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_CONFIG": "client_port=9003"
            }
        }
    ]
}